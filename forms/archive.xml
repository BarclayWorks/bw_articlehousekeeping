<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params">
        <fieldset name="task_params" label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_PARAMS">

            <field
                name="source_category"
                type="category"
                extension="com_content"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_SOURCE_CATEGORY"
                description="PLG_TASK_BW_ARTICLEHOUSEKEEPING_SOURCE_CATEGORY_DESC"
                required="true"
                multiple="false"
            />

            <field
                name="include_subcategories"
                type="radio"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_INCLUDE_SUBCATS"
                layout="joomla.form.field.radio.switcher"
                default="0"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="age_days"
                type="number"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_AGE_DAYS"
                description="PLG_TASK_BW_ARTICLEHOUSEKEEPING_AGE_DAYS_DESC"
                default="30"
                min="1"
                required="true"
                filter="int"
            />

            <field
                name="date_field"
                type="list"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_DATE_FIELD"
                default="publish_up"
            >
                <option value="created">PLG_TASK_BW_ARTICLEHOUSEKEEPING_DATE_CREATED</option>
                <option value="modified">PLG_TASK_BW_ARTICLEHOUSEKEEPING_DATE_MODIFIED</option>
                <option value="publish_up">PLG_TASK_BW_ARTICLEHOUSEKEEPING_DATE_PUBLISH_UP</option>
            </field>

            <field
                name="state_filter"
                type="list"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_STATE_FILTER"
                default="1"
            >
                <option value="1">PLG_TASK_BW_ARTICLEHOUSEKEEPING_PUBLISHED_ONLY</option>
                <option value="*">PLG_TASK_BW_ARTICLEHOUSEKEEPING_ALL_STATES</option>
            </field>

            <field
                name="dry_run"
                type="radio"
                label="PLG_TASK_BW_ARTICLEHOUSEKEEPING_DRY_RUN"
                description="PLG_TASK_BW_ARTICLEHOUSEKEEPING_DRY_RUN_DESC"
                layout="joomla.form.field.radio.switcher"
                default="1"
            >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

        </fieldset>
    </fields>
</form>
